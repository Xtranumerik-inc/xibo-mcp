# Xibo CMS Configuration
XIBO_API_URL=https://your-xibo-instance.com
XIBO_CLIENT_ID=your_client_id_here
XIBO_CLIENT_SECRET=your_client_secret_here

# Company Branding
COMPANY_NAME=Xtranumerik Inc.
LOGO_PATH=/assets/logo-xtranumerik.png

# Geographic Configuration
# Format: JSON object with zone names as keys and city arrays as values
GEO_ZONES='{"region_1":["City A","City B","City C"],"region_2":["City D","City E","City F"],"national":["all"]}'

# Default cities to exclude (comma-separated)
DEFAULT_EXCLUDE_CITIES=City A,City B

# Region Permissions
# Format: JSON object defining client permissions per region
REGION_PERMISSIONS='{"client_a":{"regions":["region_1","region_3"],"permissions":["view","edit_content"]},"internal":{"regions":["all"],"permissions":["all"]}}'

# Default Tags (comma-separated)
DEFAULT_TAGS=advertising,information,emergency,promotion

# MCP Server Configuration
MCP_SERVER_NAME=xibo-mcp
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=3000

# Logging
LOG_LEVEL=info
LOG_FILE=xibo-mcp.log

# Cache Settings
CACHE_TTL=300
ENABLE_CACHE=true

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60